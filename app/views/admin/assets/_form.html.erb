<%= form_for [:admin, @asset], :html => { :multipart => true } do |f| %>
  <%= error_messages_for @asset %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.file_field :document %>
  </div>

  <hr class="thick" />

  <p>
    <%= f.submit :class => "button" %> or <%= link_to "cancel", admin_assets_path %>
  </p>
  
<% end %>


